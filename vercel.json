{
  "functions": {
    "app/api/[transport]/route.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "app/api/minimal/[transport]/route.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "app/api/optimized/[transport]/route.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/api/(mcp|minimal|optimized)(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/mcp",
      "destination": "/api/mcp"
    },
    {
      "source": "/minimal/mcp",
      "destination": "/api/minimal/mcp"
    },
    {
      "source": "/optimized/mcp", 
      "destination": "/api/optimized/mcp"
    }
  ]
} 